<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtvTitle"
        android:layout_width="253dp"
        android:layout_height="46dp"
        android:layout_marginStart="239dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="239dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/ubuntu_mono"
        android:text="Chu Da Di game"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/txtvUsedToLocate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="239dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="144dp"
        android:onClick="btnStartClicked"
        android:text="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnQuit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="238dp"
        android:layout_marginBottom="144dp"
        android:onClick="btnQuitClicked"
        android:text="quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStart"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle" />

    <TextView
        android:id="@+id/txtvUsedToLocate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="338dp"
        android:layout_marginBottom="194dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtvTitle" />
</android.support.constraint.ConstraintLayout>